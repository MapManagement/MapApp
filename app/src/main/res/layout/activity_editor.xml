<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
            android:id="@+id/info_set_title"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="@string/editorTitle"
            android:textSize="20sp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <EditText
            android:id="@+id/setFileTitle"
            android:layout_width="0dp"
            android:layout_height="40dp"

            app:layout_constraintTop_toBottomOf="@id/info_set_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:importantForAutofill="no"
            android:inputType="text"
            tools:ignore="LabelFor"/>

    <View
            android:id="@+id/editorDivider"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setFileTitle"/>

    <TextView
            android:id="@+id/info_set_question"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="@string/editorQuestionName"
            android:textSize="20sp"

            app:layout_constraintTop_toBottomOf="@id/editorDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:id="@+id/setQuestionName"
            android:layout_width="0dp"
            android:layout_height="40dp"

            app:layout_constraintTop_toBottomOf="@id/info_set_question"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:importantForAutofill="no"
            android:inputType="text"
            tools:ignore="LabelFor"/>

    <TextView
            android:id="@+id/info_set_answer"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="@string/editorAnswerName"
            android:textSize="20sp"

            app:layout_constraintTop_toBottomOf="@id/setQuestionName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:id="@+id/setAnswerName"
            android:layout_width="0dp"
            android:layout_height="40dp"

            app:layout_constraintTop_toBottomOf="@id/info_set_answer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:importantForAutofill="no"
            android:inputType="text"
            tools:ignore="LabelFor"/>

    <View
            android:id="@+id/editorDivider2"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@color/colorPrimary"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setAnswerName"/>

    <Button
            android:id="@+id/addButton"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/editorAddButton"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"

            app:layout_constraintTop_toBottomOf="@id/editorDivider2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>

    <TextView
            android:id="@+id/addedValuesText"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toBottomOf="@id/addButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/submitButton"/>

    <Button
            android:id="@+id/submitButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:text="@string/editorSubmittButton"
            android:textSize="25sp"
            android:textColor="@color/white"

           app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>